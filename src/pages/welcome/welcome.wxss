page {
  height: 100%;
  background-color: #b3d4db;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;

}
.avatar {
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
}
.name {
  font-size: 32rpx;
