swiper {
  height: 400rpx;
  position: relative;
}
swiper-item>image {
  width: 100%;
  height: 100%;
}
swiper-item>text {
  position: absolute;
  color: #3ba4ab;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.food {
  display: flex;
  flex-direction: column;
}
.food>.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin: 30rpx 0 20rpx 30rpx;
}
.food>.item {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
}
.item>image {
  width: 160rpx;
  height: 160rpx;
}
.item>.content {
  height: 100rpx;
  padding: 30rpx 20rpx;
  overflow: hidden;
}
.content>text {
  display: block;
  overflow: hidden;
  height: 50rpx;
  line-height: 50rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.content>.item-title {
  font-size: 30rpx;
  font-weight: bold;
}
.content>.item-detail {
  font-size: 28rpx;
  color: #888;
}