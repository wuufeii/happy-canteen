page {
  height: 100%;
  background-color: #eee;
}
.tips {
  height: 32px;
  line-height: 32px;
  text-align: center;
  vertical-align: middle;
  background-color: #b3d4db;
  color: #fff;
  position: relative;
}
.tips>icon {
  height: 20px;
  position: absolute;
  top: 8px;
}
.tips>text {
  font-size: 14px;
  margin-left: 25px;
}
.section {
  margin: 10px 0;
  background-color: #fff;
  border-top: 1px solid #ddd;
}
.item {
  height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #ddd;
  position: relative;
}
.item-label {
  display: inline-block;
  width: 75px;
  margin-left: 10px;
  font-size: 32rpx;
  text-align: justify;
}
.item-label:after {
  display: inline-block;
  content: '';
  width: 100%;
  height: 0;
  overflow: hidden;
}
.item-content {
  position: absolute;
  top: 7px;
  left: 110px;
}
.item-time {
  top: 0;
}
.placeholderStyle {
  font-size: 28rpx;
}